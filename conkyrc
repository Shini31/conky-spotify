#Spotify-Conky
conky.config = {
	background = false,
	font = 'sans:size=8',
	use_xft = true,
	xftalpha = 0.9,
  own_window_argb_visual = true,
  own_window_colour = 000000,
  own_window_argb_value = 0,
  own_window = true,
	own_window_type = 'normal',
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	minimum_width = 180,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = true,
	alignment = 'top_right',
	gap_x = 15,
	gap_y = 80,
	no_buffers = true,
	override_utf8_locale = true,

}

conky.text = [[

# Spotify
${color red}${font Neuropolitical:size=9:bold}MUSIC ${color grey} ${hr 2} ${color white}${font}
${if_running spotify}
${image $HOME/.conky/spotify/current_artwork.jpg -p 80,80 -s 87x87 -n}
${execpi 2 $HOME/.conky/spotify/spotify_getinfo.pl 2> /dev/null}
${endif}
]]

